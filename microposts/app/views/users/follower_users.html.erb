
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Followers</h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <%= gravatar_for @user %>
          <%= user.name %>
          <span class="timestamp">
              Posted <%= time_ago_in_words(user.micropost.created_at) %> ago.
          </span>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>